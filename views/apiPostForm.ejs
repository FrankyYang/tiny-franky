<form class="form-horizontal" method="post" action="/post">
    <fieldset>
        <legend>输入你的记事信息</legend>
        <div class="control-group">
            <label class="control-label" for="username">标题</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="urlvalue" name="urlvalue">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="response">内容</label>
            <div class="controls">
                <textarea class="input-xlarge" id="response" name="response" placeholder="" rows="5"></textarea>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">保存</button>
        </div>
    </fieldset>
</form>
